        <file>
            <source>${project.build.directory}/${project.build.finalName}.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/logback.xml</source>
            <outputDirectory>/log</outputDirectory>
        </file>
    </files>
